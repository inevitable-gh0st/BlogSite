<%- include("partials/header") %>

<div class="ui main text container">
	<div class="ui huge header">
		Blog Website
	</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% blog.forEach(function(blog){ %>
			<div class="item">
				<div class="image">
					<img src="<%=blog.image  %>" height="42" weidth="42">
				</div>
				<div class="content">
					<a class="header" href="/blogs/<%=blog._id %>"><%= blog.title %></a>
					<div class="meta">
						<%= blog.created.toDateString() %>
					</div>
					<div class="description">
						<p>
						   <%= blog.body.substring(0,100) %> .... 

						</p>
					</div>
                	<div class="extra">
						<a class="ui floated basic violet button" href="/blogs/<%=blog._id %>">Read More<i class="right chevron icon"></i></a>
					</div>
    			</div>
			</div>
			<% }) %>
		</div>
	</div>
</div>

<%- include("partials/footer") %>